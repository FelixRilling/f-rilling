{
    "name": "f-rilling.com",
    "version": "v3.8.0",
    "description": "f-rilling.com custom theme",
    "main": "js/app.js",
    "constants": {
        "dirBase": {
            "input": "./",
            "output": "../"
        },
        "js": {
            "input": "js/app",
            "namespace": {
                "module": "frilling",
                "file": "js/app"
            }
        },
        "css": {
            "input": "scss/app",
            "output": "css/app"
        }
    },
    "scripts": {
        "start": "npm-run-all lint build",
        "build": "npm-run-all --parallel css:dev js:dev",
        "dist": "npm-run-all --parallel css:dist js:dist",
        "css:dev": "node tasks/cssDev",
        "css:dist": "node tasks/cssDist",
        "js:dev": "node tasks/jsDev",
        "js:dist": "node tasks/jsDist",
        "lint": "eslint src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/frilling.com.git"
    },
    "author": "FelixRilling",
    "license": "MIT",
    "homepage": "https://f-rilling.com",
    "dependencies": {
        "bootstrap": "^4.0.0-beta"
    },
    "devDependencies": {
        "babel-core": "^7.0.0-alpha.20",
        "babel-preset-es2016": "^7.0.0-alpha.20",
        "eslint": "^4.6.1",
        "eslint-plugin-unicorn": "^2.1.2",
        "node-sass": "^4.5.3",
        "npm-run-all": "^4.1.1",
        "rollup": "^0.49.2",
        "uglify-es": "^3.0.28",
        "rollup-plugin-commonjs": "^8.2.0",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-replace": "^2.0.0"
    }
}
