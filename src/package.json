{
    "name": "f-rilling.com",
    "version": "v3.8.0",
    "description": "f-rilling.com custom theme",
    "main": "js/app.js",
    "scripts": {
        "start": "npm-run-all lint build",
        "build": "npm-run-all --parallel css:dev js:dev",
        "dist": "npm-run-all --parallel css:dist js:dist",
        "css:dev": "node-sass scss/app.scss -o ../css/ --output-style expanded",
        "css:dist": "node-sass scss/app.scss -o ../css/ --output-style compressed",
        "js:dev": "cross-env NODE_ENV=development webpack --progress --hide-modules",
        "js:dist": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "lint": "eslint js/**/*.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/frilling.com.git"
    },
    "author": "FelixRilling",
    "license": "MIT",
    "homepage": "https://f-rilling.com",
    "dependencies": {
        "bootstrap": "^4.3.1",
        "lightdash": "^10.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.5.0",
        "@babel/preset-env": "^7.5.0",
        "babel-loader": "^8.0.6",
        "cross-env": "^5.2.0",
        "eslint": "^6.0.1",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "terser": "^4.0.2",
        "terser-webpack-plugin": "^1.3.0",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5"
    }
}
