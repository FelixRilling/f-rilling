{
    "name": "rilling.dev_theme",
    "version": "4.0.2",
    "private": true,
    "license": "MIT",
    "description": "rilling.dev custom theme",
    "scripts": {
        "start": "npm run dist",
        "dist": "npm run clean && npm run lint && npm run build",
        "build": "npm-run-all --parallel css:dist js:dist",
        "watch": "npm-run-all --parallel css:watch js:watch",
        "css:watch": "sass ./src/scss/main.scss ./source/main.css --watch  -I ./node_modules/normalize.css/",
        "css:dist": "sass ./src/scss/main.scss ./source/main.css --style compressed -I ./node_modules/normalize.css/",
        "js:watch": "webpack -d --watch",
        "js:dist": "webpack -p",
        "lint": "eslint ./src/ts/ --ext .ts",
        "fix": "eslint ./src/ts/ --ext .ts --fix",
        "clean": "rimraf ./source/*"
    },
    "author": {
        "name": "Felix Rilling",
        "email": "contact@rilling.dev",
        "url": "https://rilling.dev"
    },
    "homepage": "https://rilling.dev",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/rilling.dev_theme.git"
    },
    "dependencies": {
        "normalize.css": "^8.0.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "sass": "^1.26.10",
        "terser": "^5.1.0",
        "terser-webpack-plugin": "^4.1.0",
        "ts-loader": "^8.0.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    }
}
