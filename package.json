{
    "name": "rilling.dev_theme",
    "version": "4.0.1",
    "private": true,
    "description": "rilling.dev custom theme",
    "scripts": {
        "start": "npm run dist",
        "dist": "npm run clean:dist && npm run lint && npm run build:dist",
        "build": "npm-run-all --parallel css js",
        "build:dist": "npm-run-all --parallel css:dist js:dist",
        "watch": "npm-run-all --parallel css:watch js:watch",
        "css": "node-sass src/scss/main.scss -o ./source/css/ --output-style expanded",
        "css:watch": "node-sass src/scss/main.scss -o ./source/css/ --output-style expanded --watch",
        "css:dist": "node-sass src/scss/main.scss -o ./source/css/ --output-style compressed",
        "js": "webpack -d",
        "js:watch": "webpack -d --watch",
        "js:dist": "webpack -p",
        "lint": "eslint ./src/ts/ --ext .ts",
        "fix": "eslint ./src/ts/ --ext .ts --fix",
        "clean:dist": "rimraf ./source/css/ ./source/js/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/rilling.dev_theme.git"
    },
    "author": "FelixRilling",
    "license": "MIT",
    "homepage": "https://rilling.dev",
    "dependencies": {
        "bootstrap": "^4.5.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "terser": "^4.8.0",
        "terser-webpack-plugin": "^3.0.7",
        "ts-loader": "^8.0.1",
        "typescript": "^3.9.7",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    }
}
