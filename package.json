{
    "name": "rilling.dev_theme",
    "version": "4.0.2",
    "private": true,
    "license": "MIT",
    "description": "rilling.dev custom theme",
    "scripts": {
        "start": "npm run dist",
        "dist": "npm run clean && npm run lint && npm run build",
        "build": "npm-run-all --parallel css:dist js:dist copy-deps",
        "watch": "npm-run-all --parallel css:watch js:watch",
        "css:watch": "sass ./src/scss/main.scss ./source/main.css --watch  -I ./node_modules/normalize.css/",
        "css:dist": "sass ./src/scss/main.scss ./source/main.css --style compressed -I ./node_modules/normalize.css/",
        "js:watch": "webpack --mode='development' --watch --hot",
        "js:dist": "webpack --mode='production'",
        "copy-deps": "node copy-deps.js",
        "lint": "eslint ./src/ts/ --ext .ts",
        "fix": "eslint ./src/ts/ --ext .ts --fix",
        "clean": "rm -r ./source/main.css ./source/main.js"
    },
    "author": {
        "name": "Felix Rilling",
        "email": "contact@rilling.dev",
        "url": "https://rilling.dev"
    },
    "homepage": "https://rilling.dev",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/rilling.dev_theme.git"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.2",
        "normalize.css": "^8.0.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "sass": "^1.32.8",
        "terser": "^5.6.0",
        "terser-webpack-plugin": "^5.1.1",
        "ts-loader": "^8.0.17",
        "typescript": "^4.1.5",
        "webpack": "^5.23.0",
        "webpack-cli": "^4.5.0"
    }
}
