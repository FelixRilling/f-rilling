{
    "name": "f-rilling.com",
    "version": "v4.0.0",
    "description": "f-rilling.com custom theme",
    "scripts": {
        "start": "npm-run-all lint build",
        "build": "npm-run-all --parallel css js",
        "dist": "npm-run-all --parallel css:dist js:dist",
        "css": "node-sass src/scss/style.scss -o ./source/css/ --output-style expanded",
        "css:watch": "node-sass src/scss/style.scss -o ./source/css/ --output-style expanded --watch",
        "css:dist": "node-sass src/scss/style.scss -o ./source/css/ --output-style compressed",
        "js": "cross-env NODE_ENV=development webpack",
        "js:watch": "cross-env NODE_ENV=development webpack --watch",
        "js:dist": "cross-env NODE_ENV=production webpack",
        "lint": "eslint js/**/*.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/frilling.com.git"
    },
    "author": "FelixRilling",
    "license": "MIT",
    "homepage": "https://f-rilling.com",
    "dependencies": {
        "bootstrap": "^4.3.1",
        "lightdash": "^10.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.5.0",
        "@babel/preset-env": "^7.5.2",
        "@babel/preset-typescript": "^7.3.3",
        "@types/node": "^12.6.1",
        "babel-loader": "^8.0.6",
        "cross-env": "^5.2.0",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "terser": "^4.1.2",
        "terser-webpack-plugin": "^1.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3",
        "webpack": "^4.35.3",
        "webpack-cli": "^3.3.5"
    }
}
