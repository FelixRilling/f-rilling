{
    "name": "rilling.dev_theme",
    "version": "4.0.0",
    "private": true,
    "description": "rilling.dev custom theme",
    "scripts": {
        "start": "npm run dist",
        "dist": "npm-run-all clean lint build:dist",
        "build": "npm-run-all --parallel css js",
        "build:dist": "npm-run-all --parallel css:dist js:dist",
        "watch": "npm-run-all --parallel css:watch js:watch",
        "clean": "rimraf ./source/css/ ./source/js/",
        "css": "node-sass src/scss/style.scss -o ./source/css/ --output-style expanded",
        "css:watch": "node-sass src/scss/style.scss -o ./source/css/ --output-style expanded --watch",
        "css:dist": "node-sass src/scss/style.scss -o ./source/css/ --output-style compressed",
        "js": "cross-env NODE_ENV=development webpack",
        "js:watch": "cross-env NODE_ENV=development webpack --watch",
        "js:dist": "cross-env NODE_ENV=production webpack",
        "lint": "eslint ./src/ts/ --ext .ts",
        "fix": "eslint ./src/ts/ --ext .ts --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/rilling.dev_theme.git"
    },
    "author": "FelixRilling",
    "license": "MIT",
    "homepage": "https://rilling.dev",
    "dependencies": {
        "bootstrap": "^4.3.1",
        "lightdash": "^10.3.0"
    },
    "devDependencies": {
        "@types/node": "^12.12.7",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "@typescript-eslint/parser": "^2.7.0",
        "cross-env": "^6.0.3",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "terser": "^4.4.0",
        "terser-webpack-plugin": "^2.2.1",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    }
}
