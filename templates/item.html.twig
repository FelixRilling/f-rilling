{% embed 'partials/base.html.twig' %}
    {% block presenter %}
        {% include 'partials/presenter.html.twig' with {'icon': "file-text-o", 'title': page.title} %}
    {% endblock %}

    {% block content %}

        {% if config.plugins.breadcrumbs.enabled %}
            {% include 'partials/breadcrumbs.html.twig' %}
        {% endif %}
        {% include 'partials/blog_item.html.twig' with {'blog': page.parent, 'truncate': false, 'full': true} %}
        {% include 'modular/comments.html.twig' with {'page': page} %}
    {% endblock %}

{% endembed %}
