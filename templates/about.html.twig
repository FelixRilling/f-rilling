{% extends 'partials/base.html.twig' %}

{% block presenter %}
    {% include 'partials/presenter.html.twig' with {'page': page} %}
{% endblock %}

{% block main %}
    <div class="container">
        <div class="section section-margin about" itemprop="mainContentOfPage">
            <div class="about-section about-main" itemscope itemtype="http://schema.org/Person">
                <img class="about-img" itemprop="image" src="{{url('theme://img/images/selfie_smaller.png/')}}">
                <h2>
                    <span itemprop="name">Felix</span>
                    <span itemprop="familyName">Rilling</span>
                </h2>
                <hr class="hr hr--sm">
                <h3 itemprop="jobTitle">Web Developer</h3>

                <p><b>Born</b>: <span itemprop="birthDate">1997-03-07</span></p>
                <p><b>Nationality</b>: <span itemprop="nationality">German</span></p>
                <p><b>Gender</b>: <span itemprop="gender">Male</span></p>
                <p hidden aria-hidden itemprop="email">contact@f-rilling.com</p>

                <div itemprop="description">{{page.content}}</div>
            </div>
            <div class="about-section about-skills">
                <h2>Skills</h2>
                <hr class="hr hr--sm">
                {% for grouptype, groupcontent in header.data.skills %}
                    <div class="skill-section">
                        <h3>{{grouptype}}</h3>
                        <ul>
                            {% for skillname, skillitems in groupcontent %}
                                <li class="skill">
                                    <h4>{{skillname}}</h4>
                                    <hr class="hr hr--sm">
                                    <ul>
                                        {% for skillitem in skillitems %}
                                            <li>{{skillitem}}</li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
            <div class="about-section about-experience">
                <h2>References</h2>
                <hr class="hr hr--sm">
                <h3>Professional Experience</h3>
                <ul>
                    {% for reference in header.data.references %}
                        <li>
                            <p>
                                <b>{{reference.role}}</b>
                                <br/>
                                <span>{{reference.at}}</span>
                                <br/>
                                </span>{{reference.time}}</span>
                            </p>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% include 'modular/social.html.twig' %}
    </div>
{% endblock %}
