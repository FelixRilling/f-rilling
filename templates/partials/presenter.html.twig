{% if page.title | length < 12 %}
    {% set titleLength = "short" %}
{% elseif page.title | length < 24 %}
    {% set titleLength = "medium" %}
{% else %}
    {% set titleLength = "long" %}
{% endif %}
<div class="presenter {{page.template == 'item' ? '' : 'presenter--lg'}}">
    {% if page.header.icon %}
        <span class="presenter-icon fal fa-{{page.header.icon}}" aria-hidden="true"><!--icon--></span>
    {% endif %}

    <div class="presenter-content">
        <h1 class="presenter-title presenter-title-{{titleLength}}" itemprop="name headline">{{page.title|e}}</h1>

        {% if page.template == "item" %}
            {% if page.date %}
                <p class="presenter-meta">
                    <span itemprop="datePublished dateCreated">
                        {% include 'modular/date.html.twig' with {'date': page.date} %}
                    </span>
                    |
                    <span>
                        <a href="{{url('about/')}}" rel="author">Felix Rilling</a>
                    </span>
                </p>
            {% endif %}
            {% if page.taxonomy.tag %}
                <div class="presenter-tags" itemprop="keywords">
                    {% include 'modular/tags.html.twig' with {'tags': page.taxonomy.tag, 'dark': true} %}
                </div>
            {% endif %}
        {% endif %}

        <div hidden="true" itemprop="isFamilyFriendly">true</div>
        <div hidden="true" itemprop="isAccessibleForFree">true</div>
    </div>
</div>
