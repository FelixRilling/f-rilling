<div class="article-header {{full ? " hiddenSchema" : " "}}">
    <div>
        <h2 class="article-title" itemprop="name">
            <a href="{{ page.url }}" title="Read {{ page.title |e}}">{{ page.title |e}}</a>
        </h2>
    </div>
    <div>
        <div class="article-tags " itemprop="keywords">
            {% if page.taxonomy.tag %}
                {% include 'modular/tags.html.twig' with {'tags': page.taxonomy.tag} %}
            {% endif %}
        </div>
    </div>
    <div>
        <p class="article-meta" >
          <span itemprop="datePublished">
            {% include 'modular/date.html.twig' with {'date': page.date} %}
          </span>
          |
          <span>
            Felix Rilling
          </span>
        </p>
    </div>
</div>
<div class="article-content" itemprop="articleBody">
    {% if full %}
        {{ page.content }}
    {% else %}
        {{ page.summary |raw}}
        <a class="btn btn-primary btn-primary-margin" href="{{ page.url }}" title="Read {{ page.title |e}}">Continue Reading</a>
    {% endif %}
</div>
