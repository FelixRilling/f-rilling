<div class="article-header {{full ? " hiddenSchema" : " "}}">
    <div>
        <h2 class="article-title" itemprop="name">
            <a href="{{ page.url }}">{{ page.title }}</a>
        </h2>
    </div>
    <div>
        <div class="article-tags " itemprop="keywords">
            {% if page.taxonomy.tag %}
                {% include 'modular/tags.html.twig' with {'tags': page.taxonomy.tag} %}
            {% endif %}
        </div>
    </div>
    <div>
        <p class="article-date" itemprop="datePublished">
            {% include 'modular/date.html.twig' with {'date': page.date} %}
        </p>
    </div>
</div>
<div class="article-content" itemprop="articleBody">
    {% if full %}
        {{ page.content }}
    {% else %}
        {{ page.summary }}
        <p>
            <a class="btn btn-primary" href="{{ page.url }}" title="Read {{ page.title }}">Continue Reading...</a>
        </p>
    {% endif %}
</div>
