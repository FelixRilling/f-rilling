                <ul class="navbar-nav" role="menubar">
                    <% for (const [name, path] of Object.entries(theme.menu)){ %>
                        <% const activePage = url_for(path) === url_for(page.path); %>
                        <li class="nav-item <%= activePage ? 'active' : '' %>" role="menuitem">
                            <a class="nav-link" href="<%= url_for(path) %>"
                               title="Go to <%= name %>"><%= name %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</div>
