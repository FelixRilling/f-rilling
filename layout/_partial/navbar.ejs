<div class="navbar-expand-md fixed-top">
    <nav class="navbar navbar-light">
        <div class="container">
            <a class="navbar-brand" href="<%- url_for('/') %>" title="Go to Home">F-Rilling</a>
            <a class="navbar-toggler navbar-toggler-right" href="javascript:" id="navbarToggler" role="button"
               title="Toggle navigation" aria-controls="navbarMenu" aria-expanded="false">
                <span class="menu-bar" aria-hidden="true"><!-- Icon --></span>
                <span class="menu-bar" aria-hidden="true"><!-- Icon --></span>
                <span class="menu-bar" aria-hidden="true"><!-- Icon --></span>
            </a>
